<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.racoondog.mystudent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".DirectFeedback"
                android:screenOrientation="portrait" />

        <activity android:name=".ThemeSetting"
                android:screenOrientation="portrait" />

        <activity android:name=".CreateSchedule"
                android:screenOrientation="portrait" />

        <activity android:name=".CreateSubject"

                android:screenOrientation="portrait"/>

        <activity android:name=".SubjectDetail"
                android:screenOrientation="portrait"/>

        <activity android:name=".License"
                android:screenOrientation="portrait"></activity>

        <activity android:name=".MainActivity"

                android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>