<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whiteColor">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lesson_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/whiteColor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">



            <me.grantland.widget.AutofitTextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목 정보"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold">

            </me.grantland.widget.AutofitTextView>

            <ImageButton
                    android:id="@+id/lessonQuit_Button"
                    android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                    android:background="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintRight_toLeftOf="@id/toolbar_title"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:tint="@color/defaultAccentColor">

            </ImageButton>


            <Button
                    android:id="@+id/lessonSave_Button"
                    android:text="수정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintLeft_toRightOf="@id/toolbar_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    app:layout_constraintHorizontal_bias="1"
                    android:background="@null"
                    android:textColor="@color/defaultAccentColor"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lesson_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/title_bar"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">
        <EditText
                android:id="@+id/subject_title"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:hint="제목"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subject_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null"
                android:enabled="false"
                android:textColor="@color/defaultColor"
                android:maxLength="15">

        </EditText>
        <TextView
                android:id="@+id/subject_time"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/subject_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0"
                android:textSize="16sp"
                android:text="2019.xx.xx">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/Content_bar"
            android:background="@drawable/time_picker_layout"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설명 "
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/subject_content"
                app:layout_constraintLeft_toLeftOf="@id/subject_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/explain"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintVertical_bias="0">

        </TextView>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="내용이 없습니다."
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/explain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/subject_content"
                android:textColor="@color/grayColor"
                android:maxLength="20"
                android:singleLine="true"
                android:enabled="false">

        </EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:layout_constraintTop_toBottomOf="@id/Content_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/lesson_bar"
            android:background="@drawable/layout_shape"
            android:paddingEnd="20dp"
            android:paddingStart="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수강생 정보 "
                android:textSize="16dp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/studentDetail_bar"
                app:layout_constraintLeft_toLeftOf="@id/studentDetail_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/student_explain"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0.1">

        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:id="@+id/studentDetail_bar"
                app:layout_constraintTop_toBottomOf="@id/student_explain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름: "
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/student_birth"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/student_name"
                    android:textSize="16sp">

            </TextView>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/student_name"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/student_name"
                    app:layout_constraintBottom_toBottomOf="@id/student_name"
                    android:id="@+id/studentName_text"
                    android:background="@null"
                    android:textColor="@color/grayColor"
                    android:enabled="false"
                    android:textSize="16sp"
                    android:textStyle="bold">

            </EditText>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일: "
                    app:layout_constraintTop_toBottomOf="@id/student_name"
                    app:layout_constraintBottom_toTopOf="@id/student_phone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/student_birth"
                    android:textSize="16sp">

            </TextView>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/student_birth"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/student_birth"
                    app:layout_constraintBottom_toBottomOf="@id/student_birth"
                    android:id="@+id/studentBirth_text"
                    android:background="@null"
                    android:textColor="@color/grayColor"
                    android:enabled="false">

            </EditText>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호: "
                    app:layout_constraintTop_toBottomOf="@id/student_birth"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/student_phone"
                    android:textSize="16sp">

            </TextView>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/student_phone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/student_phone"
                    app:layout_constraintBottom_toBottomOf="@id/student_phone"
                    android:id="@+id/studentPhone_text"
                    android:background="@null"
                    android:textColor="@color/grayColor"
                    android:enabled="false">

            </EditText>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레슨 정보 "
                android:textSize="16dp"

                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lessonDetail_bar"
                app:layout_constraintLeft_toLeftOf="@id/lessonDetail_bar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                android:id="@+id/lesson_explain"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="1">

        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="80dp"

                app:layout_constraintTop_toBottomOf="@id/studentDetail_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/lessonDetail_bar"
                app:layout_constraintVertical_bias="1"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레슨 비용: "
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/lesson_cycle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/lesson_cost"
                    android:textSize="16sp">

            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lesson_cost"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/lesson_cost"
                    app:layout_constraintBottom_toBottomOf="@id/lesson_cost"
                    android:id="@+id/lessonCost_text"
                    android:background="@null"
                    android:textColor="@color/grayColor"
                    android:enabled="false">

            </EditText>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레슨 횟수: "
                    app:layout_constraintTop_toBottomOf="@id/lesson_cost"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/lesson_cycle"
                    android:textSize="16sp">

            </TextView>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/lesson_cycle"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/lesson_cycle"
                    app:layout_constraintBottom_toBottomOf="@id/lesson_cycle"
                    android:id="@+id/lessonCycle_text"
                    android:background="@null"
                    android:textColor="@color/grayColor"
                    android:enabled="false">

            </EditText>

            



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/subjectDelete_bar">

        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/icon_delete"
                android:id="@+id/subject_delete">

        </androidx.appcompat.widget.AppCompatImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>