<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        android:id="@+id/subject_detail_main">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subject_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/whiteColor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subject_detail_toolbar_title"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/darkColor"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold">

            </TextView>

            <ImageButton
                    android:id="@+id/subject_detail_quit_btn"
                    android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                    android:background="@null"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintRight_toLeftOf="@id/toolbar_title"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    android:tint="@color/defaultAccentColor">

            </ImageButton>


            <ImageButton
                    android:id="@+id/subject_detail_save_btn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintLeft_toRightOf="@id/toolbar_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    app:layout_constraintHorizontal_bias="1"
                    android:src="@drawable/icon_check"
                    android:tint="@color/defaultAccentColor"
                    android:background="@null"
                    android:textColor="@color/defaultAccentColor"
                    />



        </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/subject_detail_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lesson_scroll"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lesson_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                <EditText
                        android:id="@+id/subject_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/subject_detail_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@null"
                        android:textColor="@color/defaultColor">

                </EditText>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Content_bar"
                    app:layout_constraintTop_toBottomOf="@id/title_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_memo_text"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:paddingEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/subject_memo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/subject_memo"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/memo">
                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/subject_detail_memo"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/memo"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/subject_memo"
                        android:textColor="@color/grayColor">

                </EditText>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/Content_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/lesson_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                <TextView
                        android:id="@+id/student_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_student_text"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/student_name"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="10dp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_student_name"
                        app:layout_constraintTop_toBottomOf="@id/student_explain"
                        app:layout_constraintBottom_toTopOf="@id/student_birth"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_name"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_name"
                        app:layout_constraintBottom_toBottomOf="@id/student_name"
                        android:id="@+id/studentName_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        >

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_student_birth"
                        app:layout_constraintTop_toBottomOf="@id/student_name"
                        app:layout_constraintBottom_toTopOf="@id/student_phone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_birth"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_birth"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_birth"
                        app:layout_constraintBottom_toBottomOf="@id/student_birth"
                        android:id="@+id/studentBirth_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_student_phone_number"
                        app:layout_constraintTop_toBottomOf="@id/student_birth"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_phone"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_phone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_phone"
                        app:layout_constraintBottom_toBottomOf="@id/student_phone"
                        android:id="@+id/studentPhone_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_lesson_title"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/studentPhone_text"
                        app:layout_constraintBottom_toTopOf="@id/lesson_cost"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/lesson_explain"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_detail_lesson_cost"
                        app:layout_constraintTop_toBottomOf="@id/lesson_explain"
                        app:layout_constraintBottom_toTopOf="@id/calculation_cycle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/lesson_cost"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>
                <EditText

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/lesson_cost"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lesson_cost"
                        app:layout_constraintBottom_toBottomOf="@id/lesson_cost"
                        android:id="@+id/lessonCost_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:inputType="number"
                        android:paddingEnd="10dp">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calculation_cycle"
                        app:layout_constraintTop_toBottomOf="@id/lesson_cost"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/cycle_switch"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/calculation_cycle"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/calculation_cycle"
                        app:layout_constraintRight_toRightOf="@id/currentCycle_text"
                        app:layout_constraintTop_toTopOf="@id/calculation_cycle"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_cycle"
                        android:layout_marginStart="10dp"
                        android:id="@+id/cycle_switch"
                        >

                </Switch>



                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/calculation_cycle"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_cycle"
                        app:layout_constraintLeft_toRightOf="@id/cycle_switch"
                        app:layout_constraintRight_toLeftOf="@id/cycle_line"
                        android:id="@+id/currentCycle_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:text="0"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:selectAllOnFocus="true">

                </TextView>


                <TextView
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/calculation_cycle"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_cycle"
                        app:layout_constraintLeft_toRightOf="@id/currentCycle_text"
                        app:layout_constraintRight_toLeftOf="@id/maxCycle_text"
                        android:id="@+id/cycle_line"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:text="/"
                        android:textSize="18sp"
                        android:gravity="center">

                </TextView>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/calculation_cycle"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_cycle"
                        app:layout_constraintLeft_toRightOf="@id/cycle_line"
                        app:layout_constraintRight_toLeftOf="@id/lesson_calculate"
                        android:id="@+id/maxCycle_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:text="0"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:selectAllOnFocus="true">

                </TextView>

                <Button
                        android:id="@+id/lesson_calculate"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="@string/calculate"
                        android:textSize="14sp"
                        android:background="@null"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_cycle"
                        app:layout_constraintLeft_toRightOf="@id/maxCycle_text"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/calculation_cycle"
                        app:layout_constraintVertical_bias="0.0">

                </Button>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.racoondog.gotaplan.TimePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_detail_time_picker"
                    app:layout_constraintTop_toBottomOf="@id/lesson_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:bg="@drawable/time_picker_layout"
                    android:layout_marginTop="10dp">

            </com.racoondog.gotaplan.TimePicker>

            <com.racoondog.gotaplan.DayPicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_detail_day_picker"
                    app:layout_constraintTop_toBottomOf="@id/subject_detail_time_picker"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

            </com.racoondog.gotaplan.DayPicker>

            <com.racoondog.gotaplan.ColorPicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_detail_color_picker"
                    app:layout_constraintTop_toBottomOf="@id/subject_detail_day_picker"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

            </com.racoondog.gotaplan.ColorPicker>

            <com.racoondog.gotaplan.Notification
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_detail_notification"
                    app:layout_constraintTop_toBottomOf="@id/subject_detail_color_picker"
                    >

            </com.racoondog.gotaplan.Notification>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_detail_lesson_mode_bar"
                    app:layout_constraintTop_toBottomOf="@id/subject_detail_notification"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingEnd="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_subject_lesson"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/subject_detail_lesson_mode_switch"
                        android:id="@+id/lesson_text"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed">

                </TextView>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_help_outline_black_24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/lesson_text"
                        android:layout_marginStart="10dp"
                        android:id="@+id/lesson_help"
                        >

                </ImageButton>

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/subject_detail_lesson_mode_switch">

                </Switch>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/subject_detail_lesson_mode_bar"
                    android:paddingTop="80dp"
                    android:paddingBottom="80dp"
                    android:id="@+id/subject_detail_delete_bar">

                <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:src="@drawable/icon_delete"
                        android:background="@null"
                        android:id="@+id/subject_detail_delete_btn">

                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>