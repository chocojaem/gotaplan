<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/whiteColor">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lesson_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/whiteColor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">



            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목 정보"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textStyle="bold">

            </TextView>

            <ImageButton
                    android:id="@+id/subject_detail_quit_btn"
                    android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                    android:background="@null"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintRight_toLeftOf="@id/toolbar_title"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:tint="@color/defaultAccentColor">

            </ImageButton>


            <Button
                    android:id="@+id/subject_detail_save_btn"
                    android:text="수정"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintLeft_toRightOf="@id/toolbar_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/toolbar_title"
                    app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                    app:layout_constraintHorizontal_bias="1"
                    android:background="@null"
                    android:textColor="@color/defaultAccentColor"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lesson_scroll">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lesson_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp">
                <EditText
                        android:id="@+id/subject_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="제목"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@null"
                        android:enabled="false"
                        android:textColor="@color/defaultColor">

                </EditText>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Content_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메모"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:paddingEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/subject_memo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/subject_memo"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/memo">
                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="내용이 없습니다."
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/memo"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/subject_memo"
                        android:textColor="@color/grayColor"
                        android:enabled="false">

                </EditText>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/Content_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/lesson_bar"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp">

                <TextView
                        android:id="@+id/student_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수강생 정보 "
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/student_name"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="0"
                        android:paddingBottom="10dp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름: "
                        app:layout_constraintTop_toBottomOf="@id/student_explain"
                        app:layout_constraintBottom_toTopOf="@id/student_birth"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_name"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_name"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_name"
                        app:layout_constraintBottom_toBottomOf="@id/student_name"
                        android:id="@+id/studentName_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:enabled="false"
                        android:textSize="16sp"
                        android:singleLine="true"
                        >

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생년월일: "
                        app:layout_constraintTop_toBottomOf="@id/student_name"
                        app:layout_constraintBottom_toTopOf="@id/student_phone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_birth"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_birth"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_birth"
                        app:layout_constraintBottom_toBottomOf="@id/student_birth"
                        android:id="@+id/studentBirth_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:enabled="false"
                        android:singleLine="true">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화번호: "
                        app:layout_constraintTop_toBottomOf="@id/student_birth"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/student_phone"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/student_phone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/student_phone"
                        app:layout_constraintBottom_toBottomOf="@id/student_phone"
                        android:id="@+id/studentPhone_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:enabled="false"
                        android:singleLine="true">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레슨 정보 "
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/studentPhone_text"
                        app:layout_constraintBottom_toTopOf="@id/lesson_cost"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/lesson_explain"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레슨 비용: "
                        app:layout_constraintTop_toBottomOf="@id/lesson_explain"
                        app:layout_constraintBottom_toTopOf="@id/lesson_cycle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/lesson_cost"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/lesson_cost"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lesson_cost"
                        app:layout_constraintBottom_toBottomOf="@id/lesson_cost"
                        android:id="@+id/lessonCost_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:enabled="false"
                        android:singleLine="true">

                </EditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레슨 횟수: "
                        app:layout_constraintTop_toBottomOf="@id/lesson_cost"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:id="@+id/lesson_cycle"
                        android:textSize="16sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                </TextView>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/lesson_cycle_minus_btn"
                        app:layout_constraintRight_toLeftOf="@id/lesson_cycle_plus_btn"
                        app:layout_constraintTop_toTopOf="@id/lesson_cycle"
                        app:layout_constraintBottom_toBottomOf="@id/lesson_cycle"
                        android:id="@+id/lessonCycle_text"
                        android:background="@null"
                        android:textColor="@color/grayColor"
                        android:enabled="false"
                        android:text="0"
                        android:singleLine="true"
                        android:gravity="center"
                        android:inputType="numberSigned"
                        android:selectAllOnFocus="true">

                </EditText>

                <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_black_24dp"
                        android:id="@+id/lesson_cycle_plus_btn"
                        android:background="@null"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintLeft_toRightOf="@id/lessonCycle_text"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lessonCycle_text"
                        app:layout_constraintBottom_toBottomOf="@id/lessonCycle_text">

                </ImageButton>
                <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:id="@+id/lesson_cycle_minus_btn"
                        android:background="@null"
                        android:layout_marginStart="30dp"
                        app:layout_constraintLeft_toRightOf="@id/lesson_cycle"
                        app:layout_constraintRight_toLeftOf="@id/lessonCycle_text"
                        app:layout_constraintTop_toTopOf="@id/lessonCycle_text"
                        app:layout_constraintBottom_toBottomOf="@id/lessonCycle_text">

                </ImageButton>

            </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.racoondog.mystudent.TimePicker
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/subject_detail_time_picker"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:bg="@drawable/time_picker_layout"
                            android:layout_marginTop="20dp">

                    </com.racoondog.mystudent.TimePicker>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/subject_detail_time_picker"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:id="@+id/subject_detail_day_picker_bar"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                        <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/subject_detail_day_group"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent">

                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/monday_button"
                                    android:button="@drawable/monday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    >

                            </RadioButton>

                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tuesday_button"
                                    android:button="@drawable/tuesday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    >

                            </RadioButton>

                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/wednesday_button"
                                    android:button="@drawable/wednesday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    >

                            </RadioButton>
                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/thursday_button"
                                    android:button="@drawable/thursday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    >

                            </RadioButton>
                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/friday_button"
                                    android:button="@drawable/friday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    >

                            </RadioButton>
                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/saturday_button"
                                    android:button="@drawable/saturday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:visibility="gone">

                            </RadioButton>
                            <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/sunday_button"
                                    android:button="@drawable/sunday_btn"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:visibility="gone">

                            </RadioButton>

                        </RadioGroup>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:id="@+id/subject_detail_color_picker_bar"
                            app:layout_constraintTop_toBottomOf="@id/subject_detail_day_picker_bar">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="색상"
                                android:textColor="@color/defaultColor"
                                android:textSize="16sp"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/subject_detail_color_picker_btn">
                        </TextView>

                        <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:id="@+id/subject_detail_color_picker_btn"
                                android:background="@drawable/color_picker_btn"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">

                        </ImageButton>

                    </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>