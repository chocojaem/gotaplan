<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_bg_layout">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/guide_auto_help_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/defaultAccentColor"
                    android:gravity="center_vertical"

                    android:id="@+id/calculation_dialog_title"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

            </TextView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/calculation_dialog_title"
                    app:layout_constraintBottom_toTopOf="@id/calculation_dialog_choose_bar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/calculation_dialog_layout"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:text="@string/cycle_switch_auto"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/defaultAccentColor"
                        android:id="@+id/calculation_dialog_content"
                        android:background="@null"

                        >

                </TextView>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/calculation_dialog_content"
                        android:text="@string/cycle_switch_auto_help"
                        android:id="@+id/calculation_dialog_help_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="10dp"
                        >

                </TextView>

                <ImageButton
                        android:id="@+id/calculation_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_help_outline_black_24dp"
                        app:layout_constraintBottom_toBottomOf="@id/calculation_dialog_help_text"
                        app:layout_constraintLeft_toRightOf="@id/calculation_dialog_help_text"
                        app:layout_constraintTop_toTopOf="@id/calculation_dialog_help_text"

                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        >

                </ImageButton>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/calculation_dialog_choose_bar"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:layout_constraintVertical_bias="1">

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/calculation_dialog_cancel"
                        app:layout_constraintRight_toLeftOf="@id/calculation_dialog_apply"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@null"
                        android:textColor="@color/defaultAccentColor"
                        android:text="@string/dialog_cancel">

                </Button>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/calculation_dialog_cancel"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@null"
                        android:id="@+id/calculation_dialog_apply"
                        android:textColor="@color/defaultAccentColor"
                        android:text="@string/dialog_apply">

                </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>