<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/themeSetting_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/underline_bg_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

        <me.grantland.widget.AutofitTextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테마 설정"
                android:layout_gravity="center"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold">

        </me.grantland.widget.AutofitTextView>

        <ImageButton
                android:id="@+id/themeSettingQuit_btn"
                android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                android:background="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintRight_toLeftOf="@id/toolbar_title"
                app:layout_constraintTop_toTopOf="@id/toolbar_title"
                app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tint="@color/defaultAccentColor">

        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/themeSetting_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/underline_bg_layout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_bar_theme_text"
                    android:text="상태바 색상"
                    android:textColor="@color/defaultAccentColor"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/status_bar_theme_picker_btn">
            </TextView>

            <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/status_bar_theme_picker_btn"
                    android:background="@drawable/color_picker_btn"
                    app:layout_constraintTop_toTopOf="@id/status_bar_theme_picker_btn_layout"
                    app:layout_constraintBottom_toBottomOf="@id/status_bar_theme_picker_btn_layout"
                    app:layout_constraintLeft_toLeftOf="@id/status_bar_theme_picker_btn_layout"
                    app:layout_constraintRight_toRightOf="@id/status_bar_theme_picker_btn_layout">

            </ImageButton>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/status_bar_theme_picker_btn_layout">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색상 초기화"
                    android:background="@null"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/status_bar_theme_picker_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    android:id="@+id/status_bar_theme_init_btn">

            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/underline_bg_layout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mainButton_theme_text"
                    android:text="메인 버튼 색상"
                    android:textColor="@color/defaultAccentColor"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/main_btn_theme_picker_btn">
            </TextView>

            <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/main_btn_theme_picker_btn"
                    android:background="@drawable/color_picker_btn"
                    app:layout_constraintTop_toTopOf="@id/mainButton_theme_picker_btn_layout"
                    app:layout_constraintBottom_toBottomOf="@id/mainButton_theme_picker_btn_layout"
                    app:layout_constraintLeft_toLeftOf="@id/mainButton_theme_picker_btn_layout"
                    app:layout_constraintRight_toRightOf="@id/mainButton_theme_picker_btn_layout">

            </ImageButton>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/mainButton_theme_picker_btn_layout">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색상 초기화"
                    android:background="@null"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/main_btn_theme_picker_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    android:id="@+id/mainButton_theme_init_btn">

            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>