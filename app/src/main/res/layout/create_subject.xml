<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/createSubject_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/whiteColor"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                    android:id="@+id/CreateSubject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목 추가"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

            <ImageButton
                    android:id="@+id/createSubject_Button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/icon_check"
                    android:background="@null"
                    app:layout_constraintLeft_toRightOf="@id/CreateSubject_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/CreateSubject_title"
                    app:layout_constraintBottom_toBottomOf="@id/CreateSubject_title"
                    app:layout_constraintHorizontal_bias="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:tint="@color/defaultAccentColor"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/createSubject_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Content_bar"
            android:id="@+id/title_bar"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0">
        <EditText
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:hint="제목을 입력하세요."
                android:textSize="18sp"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null">

        </EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/subject_picker"
            android:id="@+id/Content_bar">
        <EditText
                android:id="@+id/Content_text"
                android:layout_width="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:hint="설명"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null"
                android:maxLength="100">

        </EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.racoondog.mystudent.TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Content_bar"
            android:id="@+id/subject_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/time_picker_layout">


    </com.racoondog.mystudent.TimePicker>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/subject_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/daySelect_bar"
            app:layout_constraintBottom_toTopOf="@id/subjectColor_bar">

        <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/subject_day_group"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monday_button"
                    android:button="@drawable/monday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tuesday_button"
                    android:paddingEnd="16dp">

            </RadioButton>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tuesday_button"
                    android:button="@drawable/tuesday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/monday_button"
                    app:layout_constraintRight_toLeftOf="@id/wednesday_button"
                    android:paddingEnd="16dp">

            </RadioButton>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wednesday_button"
                    android:button="@drawable/wednesday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tuesday_button"
                    app:layout_constraintRight_toLeftOf="@id/thursday_button"
                    android:paddingEnd="16dp">

            </RadioButton>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thursday_button"
                    android:button="@drawable/thursday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/wednesday_button"
                    app:layout_constraintRight_toLeftOf="@id/friday_button"
                    android:paddingEnd="16dp">

            </RadioButton>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friday_button"
                    android:button="@drawable/friday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/thursday_button"
                    app:layout_constraintRight_toLeftOf="@id/saturday_button"
                    android:paddingEnd="16dp">

            </RadioButton>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturday_button"
                    android:button="@drawable/saturday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/friday_button"
                    app:layout_constraintRight_toLeftOf="@id/sunday_button"
                    android:visibility="gone"
                    android:paddingEnd="16dp">

            </RadioButton>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sunday_button"
                    android:button="@drawable/sunday_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/saturday_button"
                    android:visibility="gone"
                    android:paddingEnd="16dp">

            </RadioButton>

        </RadioGroup>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/daySelect_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/subjectColor_bar"
            app:layout_constraintBottom_toTopOf="@id/lessonMode_bar">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/colorPickerButton_layout"
                android:id="@+id/schedule_color"
                android:text="색상"

                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0">
        </TextView>

        <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/colorPickerButton"
                android:background="@drawable/color_picker_btn"
                app:layout_constraintTop_toTopOf="@id/colorPickerButton_layout"
                app:layout_constraintBottom_toBottomOf="@id/colorPickerButton_layout"
                app:layout_constraintLeft_toLeftOf="@id/colorPickerButton_layout"
                app:layout_constraintRight_toRightOf="@id/colorPickerButton_layout">

        </ImageButton>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/colorPickerButton_layout">

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/subjectColor_bar"
            android:id="@+id/lessonMode_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 레슨:   "
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/lesson_mode"
                android:paddingStart="20dp"
                android:id="@+id/lesson_text"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed">

        </TextView>

        <Switch
                android:layout_width="50dp"
                android:layout_height="45dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/lesson_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/lesson_mode">

        </Switch>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>