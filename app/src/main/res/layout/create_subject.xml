<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CreateSubject_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@color/White_bg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/CreateSubject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과목 추가"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

            </TextView>

            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/createSubject_Button"
                    android:text="Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_check_black_36dp"
                    app:layout_constraintLeft_toRightOf="@id/CreateSubject_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/CreateSubject_title"
                    app:layout_constraintBottom_toBottomOf="@id/CreateSubject_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CreateSubject_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Content_bar"
            android:id="@+id/text_bar"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0"
            android:background="@color/White_bg">
        <EditText
                android:id="@+id/TitleName_text"
                android:layout_width="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:hint="제목을 입력하세요."
                android:textSize="20sp"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null">

        </EditText>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/text_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Time_bar"
            android:id="@+id/Content_bar"
            android:background="@color/White_bg">
        <EditText
                android:id="@+id/Content_text"
                android:layout_width="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_height="wrap_content"
                android:hint="설명"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@null"
                android:maxLength="100">

        </EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/Content_bar"
            android:id="@+id/Time_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_picker"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@drawable/timepicker_layout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/startTime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/Start"
                android:text="시작 "
                android:textSize="15sp">

        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/startTime"
                app:layout_constraintRight_toLeftOf="@id/endTime"
                android:id="@+id/End"
                android:text="종료 "
                android:textSize="15sp">

        </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/End"
                app:layout_constraintLeft_toRightOf="@id/Start"
                android:id="@+id/startTime"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="OnClickHandler">

            <TextView
                    android:id="@+id/startText_AMPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="오전 "
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/startText_hour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/startText_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/startHourAddMinute"
                    app:layout_constraintLeft_toRightOf="@id/startText_AMPM"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />
            <TextView
                    android:id="@+id/startHourAddMinute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=":"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/startText_minute"
                    app:layout_constraintLeft_toRightOf="@id/startText_hour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />
            <TextView
                    android:id="@+id/startText_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/startHourAddMinute"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/End"
                android:id="@+id/endTime"
                android:onClick="OnClickHandler">
            <TextView
                    android:id="@+id/endText_AMPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="오전 "
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/endText_hour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/endText_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/endHourAddMinute"
                    app:layout_constraintLeft_toRightOf="@id/endText_AMPM"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />
            <TextView
                    android:id="@+id/endHourAddMinute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=":"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/endText_minute"
                    app:layout_constraintLeft_toRightOf="@id/endText_hour"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />
            <TextView
                    android:id="@+id/endText_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/endHourAddMinute"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/Time_bar"
            android:id="@+id/time_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            android:background="@drawable/layout_shape">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/start_picker"
                android:visibility="gone">

            <NumberPicker
                    android:id="@+id/start_AMPM"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/start_hour"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:theme="@style/AppTheme.Picker">

            </NumberPicker>

            <NumberPicker
                    android:id="@+id/start_hour"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/start_AMPM"
                    app:layout_constraintRight_toLeftOf="@id/start_minute">

            </NumberPicker>

            <NumberPicker
                    android:id="@+id/start_minute"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/start_hour"
                    app:layout_constraintRight_toRightOf="parent">

            </NumberPicker>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/end_picker"
                android:visibility="gone">

            <NumberPicker
                    android:id="@+id/end_AMPM"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/end_hour"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:theme="@style/AppTheme.Picker">

            </NumberPicker>

            <NumberPicker
                    android:id="@+id/end_hour"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/end_AMPM"
                    app:layout_constraintRight_toLeftOf="@id/end_minute">

            </NumberPicker>

            <NumberPicker
                    android:id="@+id/end_minute"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/end_hour"
                    app:layout_constraintRight_toRightOf="parent">

            </NumberPicker>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/time_picker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/daySelect_bar"
            app:layout_constraintBottom_toTopOf="@id/lessonMode_bar">

        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/monday_button"
                android:text="월"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tuesday_button"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_bias="0.5">

        </Button>

        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/tuesday_button"
                android:text="화"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/monday_button"
                app:layout_constraintRight_toLeftOf="@id/wednesday_button">

        </Button>

        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/wednesday_button"
                android:text="수"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tuesday_button"
                app:layout_constraintRight_toLeftOf="@id/thursday_button">

        </Button>
        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/thursday_button"
                android:text="목"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/wednesday_button"
                app:layout_constraintRight_toLeftOf="@id/friday_button"
                >

        </Button>
        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/friday_button"
                android:text="금"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/thursday_button"
                app:layout_constraintRight_toLeftOf="@id/saturday_button"

                >

        </Button>
        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/saturday_button"
                android:text="토"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/friday_button"
                app:layout_constraintRight_toLeftOf="@id/sunday_button"
                android:visibility="gone">

        </Button>
        <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/sunday_button"
                android:text="일"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/saturday_button"
                android:visibility="gone">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/daySelect_bar"
            android:id="@+id/lessonMode_bar">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 레슨:   "
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/lesson_mode"
                android:id="@+id/lesson_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.1">

        </TextView>

        <Switch
                android:layout_width="50dp"
                android:layout_height="45dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/lesson_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/lesson_mode">

        </Switch>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>