<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/directFeedback_toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/underline_bg_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라이선스"
                android:layout_gravity="center"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold">

        </TextView>

        <ImageButton
                android:id="@+id/directFeedbackQuit_Button"
                android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                android:background="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintRight_toLeftOf="@id/toolbar_title"
                app:layout_constraintTop_toTopOf="@id/toolbar_title"
                app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:tint="@color/defaultAccentColor">

        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/license_info"
            app:layout_constraintTop_toBottomOf="@id/directFeedback_toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/license_box"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/info_box"
                android:background="@color/whiteColor"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:text="License"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/license_text">

            </TextView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toBottomOf="@id/license_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Product Owner : 양태경 (Yang Tae Kyung)"
                        android:id="@+id/productOwner"
                        app:layout_constraintBottom_toTopOf="@id/productManager">

                </TextView>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/productOwner"
                        android:text="Product Manager : 김인수 (Kim Yin Soo)"
                        android:id="@+id/productManager"
                        app:layout_constraintBottom_toTopOf="@id/developer">

                </TextView>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/productManager"
                        android:text="UX Designer / Developer : 이재민 (Lee Jae Min)"
                        android:id="@+id/developer"
                        app:layout_constraintBottom_toBottomOf="parent">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info_box"
                app:layout_constraintTop_toBottomOf="@id/license_box"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/whiteColor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:text="Info"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    android:id="@+id/info_text">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/info_text"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/owner_box">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="양태경:"
                        android:id="@+id/owner_info"
                        app:layout_constraintBottom_toTopOf="@id/owner_email">

                </TextView>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email : kooltaez@naver.com"
                        android:autoLink="email"
                        android:id="@+id/owner_email"
                        android:textColorLink="@color/defaultAccentColor"
                        app:layout_constraintTop_toBottomOf="@id/owner_info"
                        app:layout_constraintBottom_toBottomOf="parent">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/owner_box"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/manager_box">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="김인수:"
                        android:id="@+id/manager_info"
                        app:layout_constraintBottom_toTopOf="@id/manager_email">

                </TextView>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email : heyinsoo@gmail.com"
                        android:autoLink="email"
                        android:id="@+id/manager_email"
                        android:textColorLink="@color/defaultAccentColor"
                        app:layout_constraintTop_toBottomOf="@id/manager_info"
                        app:layout_constraintBottom_toBottomOf="parent">

                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toBottomOf="@id/manager_box"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="이재민:"
                        android:id="@+id/developer_info"
                        app:layout_constraintBottom_toTopOf="@id/developer_email">

                </TextView>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorLink="@color/defaultAccentColor"
                        android:text="Email : void0629@gmail.com"
                        android:autoLink="email"
                        android:id="@+id/developer_email"
                        app:layout_constraintTop_toBottomOf="@id/developer_info"
                        app:layout_constraintBottom_toBottomOf="parent">

                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>